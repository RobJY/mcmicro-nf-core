/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/mcmicro -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    input_cycle  = "${projectDir}/assets/samplesheet-test.csv"
    marker_sheet = "${projectDir}/assets/markers-test.csv"

    // TODO: Add samplesheet and markersheet to testdata repo then switch to this format:
    //input_cycle  = params.pipelines_testdata_base_path + 'mcmicro/samplesheet/???.csv'
}

process {
    withName: ".*:DEEPCELL_MESMER" {
        memory = "6.GB"
        cpus = 2
    }
    withName: ".*:CELLPOSE"{
        memory = "12.GB"
        cpus   = 4
    }
}
